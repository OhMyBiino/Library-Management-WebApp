@model LibraryManagement.Models.BookModel

<div class="row">
    <div class="col-sm-12">
        <nav>
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><strong>Manage Books</strong></li>
                <li class="breadcrumb-item active"><strong>Add Book</strong></li>
            </ul>
        </nav>
    </div>
</div>
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form method="post" asp-action="CreateBook">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
                <input asp-for="Genre" class="form-control">
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control">
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control ">
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-end mt-1">
                <input type="submit" value="Create" class="btn btn-primary btn-sm ">
            </div>
        </form>
    </div>
</div>